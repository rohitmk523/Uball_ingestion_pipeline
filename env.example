# Basketball Video Processing Pipeline - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# AWS S3 Configuration (REQUIRED for production)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=basketball-games
AWS_S3_REGION=us-east-1

# ============================================
# System Configuration
# ============================================
# Side configuration: LEFT or RIGHT
BASKETBALL_SIDE=

# GPU availability (auto-detected if not set)
GPU_AVAILABLE=false

# ============================================
# Application Settings
# ============================================
# Port for the web server (default: 8000)
PORT=8000

# Host to bind to (default: 0.0.0.0 for all interfaces)
HOST=0.0.0.0

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# Production Settings
# ============================================
# Set to true in production to disable auto-reload
PRODUCTION=false

# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10737418240

# Cleanup temporary files after processing (recommended: true)
AUTO_CLEANUP=true

# ============================================
# NOTES:
# ============================================
# 1. Never commit .env file to git
# 2. For EC2, you can use IAM roles instead of access keys
# 3. For Jetson, store credentials in .env file
# 4. GPU_AVAILABLE is auto-detected but can be overridden

