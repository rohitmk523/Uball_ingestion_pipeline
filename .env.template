# Basketball Video Pipeline Configuration
# Copy this file to .env and fill in your actual values

# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# S3 Bucket Configuration
S3_BUCKET_NAME=basketball-recordings-prod

# Optional: For testing
S3_BUCKET_NAME_TEST=basketball-recordings-test

# Jetson Configuration
GOPRO_MOUNT_PATH=/media/usb/DCIM/100GOPRO
BACKUP_MOUNT_PATH=/media/usb0/DCIM/100GOPRO

# Upload Settings
MAX_FILE_SIZE_GB=6
UPLOAD_CHUNK_SIZE_MB=50

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/basketball_upload.log